alias push-vm="sh ~/scripts/push-vm-on-demand.sh"
alias sync-isaic="sh ~/scripts/sync-isaic.sh"
alias php-srv="sh ~/scripts/php-local-server.sh"
alias ipadd="cat /etc/hosts | grep"
alias tmuxs="tmux attach-session -t"

# engg vpn
alias vpn="sh ~/scripts/enggvpn.sh"
