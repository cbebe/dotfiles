# -------
# Aliases
# -------

# alias vi="nvim"
alias emacs="emacs -nw"
alias ls="ls --color=auto"
alias ll="ls -al"

alias q="exit"
alias es="vi ~/dotfiles/zsh_aliases"
alias s="source ~/dotfiles/zsh_aliases"
alias fucking="sudo"
alias ec="echo $?" # check for errors

# checking temperature
alias tempcheck="paste <(cat /sys/class/thermal/thermal_zone*/type) <(cat /sys/class/thermal/thermal_zone*/temp) | column -s $'	' -t | sed 's/\(.\)..$/.\1Â°C/'"

# auto options
alias mkdir="mkdir -pv"
alias ping="ping -c 5"
alias fastping="ping -c 100 -s.2"
alias wget="wget -c"
alias lt="ls --human-readable --size -1 -S --classify"
alias left="ls -t -1"
alias gh="history | grep"

# tar
alias tarx="tar -xzvf"
alias tarc="tar -czvf"

alias ipadd="cat /etc/hosts | grep"
alias tmuxs="tmux attach-session -t"

# engg vpn
alias vpn="sh ~/scripts/enggvpn.sh"

# screenshot crop script
alias crop="sh ~/scripts/crop-dual-monitor.sh"
