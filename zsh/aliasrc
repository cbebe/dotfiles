# -------
# Aliases
# -------

alias emacs="emacs -nw"
alias ls="ls --color=auto"
alias ll="ls -al"

alias q="exit"
alias es="vi $DOTFILE_DIR/zsh/aliasrc"
alias s="source $DOTFILE_DIR/zsh/zshrc"
alias fucking="sudo"

# checking temperature
alias tempcheck="paste <(cat /sys/class/thermal/thermal_zone*/type) <(cat /sys/class/thermal/thermal_zone*/temp) | column -s $'	' -t | sed 's/\(.\)..$/.\1Â°C/'"

# auto options
alias mkdir="mkdir -pv"
alias ping="ping -c 5"
alias fastping="ping -c 100 -s.2"
alias wget="wget -c"
alias lt="ls --human-readable --size -1 -S --classify"
alias left="ls -t -1"
alias g="goto"

# tar
alias tarx="tar -xzvf"
alias tarc="tar -czvf"

alias ipadd="cat /etc/hosts | grep"
alias tmuxs="tmux attach-session -t"

# engg vpn
alias vpn="sh ~/scripts/enggvpn.sh"

# screenshot crop script
alias crop="sh ~/scripts/crop-dual-monitor.sh"

# get public key
alias pk="cat ~/.ssh/id_ed25519.pub"

alias e="emacs"
alias c="cargo run"

alias gits="gitsync"
# delete local charles branches
alias gd="git branch -d \$(git branch | grep -e 'charles[-/]')"

alias setclip="xclip -selection c"
alias getclip="xclip -selection c -o"

# getting tired of typing this every time
alias p="git pull"

alias ll="ls -alh"

# safe options for mv, cp, and rm
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias o="xdg-open"
