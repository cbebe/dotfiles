# -------
# Aliases
# -------

# enables alias expansion
shopt -s expand_aliases

alias vi="vim"
alias py="winpty py"
alias q="exit"
alias c="code ./"
alias s="source ~/dotfiles/bashrc"
alias es="vi ~/dotfiles/bash_aliases"
alias vrc="vi ~/dotfiles/vim/vimrc"

# this is kinda specific to my laptop might remove
alias phil="cd ~/WD/codingwbb/phil265"
alias ec="echo $?" # check for errors
# open current directory in explorer
# also prety specific to my laptop might remove
alias exp="explorer ."
alias gp="~/dotfiles/scripts/autopush.sh"

